                android:text="@string/question7_choice4" />

        </LinearLayout>

        <LinearLayout
            style="@style/BasicQuestionLinearLayout">

            <TextView
                style="@style/BasicQuestionText"
                android:text="@string/question8" />

            <RadioGroup
                style="@style/BasicQuestionChoiceCheckBox"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/question8_choice1"
                    style="@style/BasicRadioButton"
                    android:text="@string/true_choice"/>

                <RadioButton
                    android:id="@+id/question8_choice2"
                    style="@style/BasicRadioButton"
                    android:text="@string/false_choice"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            style="@style/BasicQuestionLinearLayout"
            android:gravity="center">

            <Button
                style="@style/BasicButton"
                android:text="@string/submit_button"
                android:onClick="submitAnswer"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
