<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BasicEditText style for name EditText-->
    <style name="BasicEditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

    </style>


    <!-- BasicButton style inherits from BasicEditText style for submit_answer button-->
    <style name="BasicButton" parent="BasicEditText">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>


    <!-- BasicQuestionLinearLayout style inherits from BasicButton style for questions of the quiz-->
    <style name="BasicQuestionLinearLayout" parent="BasicButton">

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>

    </style>


    <!-- BasicMainQuestion style inherits from BasicEditText style for the main question of the quiz-->
    <style name="BasicMainQuestionText" parent="BasicEditText">

        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>

    </style>


    <!-- BasicQuestionText style inherits from BasicMainQuestionText style for question text -->
    <style name="BasicQuestionText" parent="BasicMainQuestionText">

        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>


    <!-- BasicButton style inherits from BasicQuestionText style for choices of questions -->
    <style name="BasicQuestionChoiceCheckBox" parent="BasicMainQuestionText">

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>

    </style>


    <!-- BasicRadioButton style for true and false radio buttons -->
    <style name="BasicRadioButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>

    </style>


</resources>
