<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Basic EditText style -->
    <style name="BasicEditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>

    </style>


    <!-- Basic Question LinearLayout style inherits from BasicEditText style -->
    <style name="BasicQuestionLinearLayout" parent="BasicEditText">

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:orientation">vertical</item>

    </style>


    <!-- Basic Main Question style inherits from BasicEditText style -->
    <style name="BasicMainQuestionText" parent="BasicEditText">

        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>

    </style>


    <!-- Basic Question Text style inherits from BasicEditText style -->
    <style name="BasicQuestionText" parent="BasicMainQuestionText">

        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>


    <style name="BasicQuestionChoiceCheckBox" parent="BasicQuestionText">

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:paddingLeft">16dp</item>

    </style>

</resources>
